# Data for SEO Project Environment Configuration

# Application Settings
APP_NAME=Data for SEO
APP_VERSION=0.1.0
DEBUG=false
ENVIRONMENT=development

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Data for SEO API Configuration
DATAFORSEO_API_URL=https://api.dataforseo.com/v3
DATAFORSEO_USERNAME=your_username_here
DATAFORSEO_PASSWORD=your_password_here
DATAFORSEO_RATE_LIMIT=100

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# ChromaDB Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_PERSIST_DIRECTORY=./data/chroma
CHROMA_COLLECTION_NAME=seo_knowledge

# Embedding Model Settings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Task Processing Settings
MAX_CONCURRENT_TASKS=10
TASK_TIMEOUT=300
RETRY_ATTEMPTS=3

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=

# Security Settings
SECRET_KEY=your-secret-key-change-in-production
ALLOWED_HOSTS=*
CORS_ORIGINS=*

# Agent Settings
AGENT_HEARTBEAT_INTERVAL=30
AGENT_TIMEOUT=120

# SEO-Specific Settings
DEFAULT_SEARCH_ENGINE=google
DEFAULT_LOCATION=United States
DEFAULT_LANGUAGE=en

# Data Retention Settings (in days)
KEYWORD_DATA_RETENTION_DAYS=365
RANKING_DATA_RETENTION_DAYS=730
AUDIT_DATA_RETENTION_DAYS=90

# Performance Settings
BATCH_SIZE=100
CACHE_TTL=3600

# External Service Settings
USER_AGENT=DataForSEO-Agent/1.0
REQUEST_TIMEOUT=30
MAX_RETRIES=3
